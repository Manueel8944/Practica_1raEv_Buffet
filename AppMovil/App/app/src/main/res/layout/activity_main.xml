<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="136dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="594dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/poppins_bolditalic"
            android:text="Bienvenido!"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="131dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Elije una mesa"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconoRefrescar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/refrescarimg" />

            <Button
                android:id="@+id/botonRefrescar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="592dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/botonM1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="73dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#83E291"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Mesa 1"
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/botonM2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botonM2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#83E291"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Mesa 2"
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/botonM3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonM1" />

        <Button
            android:id="@+id/botonM3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#83E291"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Mesa 3"
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/botonM4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonM2" />

        <Button
            android:id="@+id/botonM4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#83E291"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Mesa 4"
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/botonM5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonM3" />

        <Button
            android:id="@+id/botonM5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#83E291"
            android:fontFamily="@font/poppins_lightitalic"
            android:text="Mesa 5"
            android:textColor="@color/black"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botonM4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>